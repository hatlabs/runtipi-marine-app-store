{
  "schemaVersion": 2,
  "services": [
    {
      "name": "avnav",
      "image": "xfreex/avnav-daily:20250901",
      "isMain": true,
      "internalPort": "8080",
      "ports": [
        {
          "hostPort": "3011",
          "containerPort": "8080",
          "protocol": "tcp"
        },
        {
          "hostPort": "34567",
          "containerPort": "34567",
          "protocol": "tcp"
        }
      ],
      "privileged": true,
      "user": "1000:1000",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/var/lib/avnav"
        },
        {
          "hostPath": "/dev",
          "containerPath": "/dev"
        }
      ],
      "environment": {
        "UID": 1000,
        "GID": 1000
      }
    }
  ]
}
