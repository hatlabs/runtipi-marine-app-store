{
  "schemaVersion": 2,
  "services": [
    {
      "name": "opencpn",
      "image": "ghcr.io/hatlabs/opencpn-docker:5.12.4",
      "isMain": true,
      "internalPort": "3001",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/config",
          "containerPath": "/config"
        }
      ],
      "extraHosts": [
        "host.docker.internal:host-gateway"
      ],
      "environment": [
        { "key": "TITLE", "value": "OpenCPN" },
        { "key": "SELKIES_ENABLE_RESIZE", "value": "true" }
      ],
      "shmSize": "1gb"
    }
  ]
}
