{
  "schemaVersion": 2,
  "services": [
    {
      "name": "signalk",
      "image": "signalk/signalk-server:v2.17.2",
      "isMain": true,
      "internalPort": "3000",
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/dot_signalk",
          "containerPath": "/home/node/.signalk"
        },
        {
          "hostPath": "/dev",
          "containerPath": "/dev"
        },
        {
          "hostPath": "/var/run/docker.sock",
          "containerPath": "/var/run/docker.sock"
        },
        {
          "hostPath": "/usr/bin/docker",
          "containerPath": "/usr/bin/docker"
        },
        {
          "hostPath": "/var/run/dbus/system_bus_socket",
          "containerPath": "/var/run/dbus/system_bus_socket"
        }
      ]
    }
  ]
}
